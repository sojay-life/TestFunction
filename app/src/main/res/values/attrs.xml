<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MusicLoadingView">
        <attr name="loading_min_width" format="dimension" />
        <attr name="loading_update_width" format="dimension" />
        <attr name="loading_update_time" format="integer" />
        <attr name="loading_bg_color" format="color" />
        <attr name="loading_direction" format="enum">
            <enum name="center_to_both_sides" value="0"/>
            <enum name="both_sides_to_center" value="1"/>
            <enum name="left_to_right" value="2"/>
            <enum name="right_to_left" value="3"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="CardLayout">
        <attr name="child_width" format="dimension" />
        <attr name="child_height" format="dimension" />
        <attr name="child_cornerRadius" format="dimension" />
        <attr name="child_rebound" format="dimension" />
        <attr name="child_disappear" format="dimension" />
        <attr name="child_margin" format="dimension" />
        <attr name="child_scaling_base" format="float" />
        <attr name="child_show_count" format="integer" />
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_lt_radius" format="dimension" />
        <attr name="corner_lb_radius" format="dimension" />
        <attr name="corner_rt_radius" format="dimension" />
        <attr name="corner_rb_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="mutate_background" format="boolean" />
        <attr name="oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>

    <declare-styleable name="MyClock">
        <attr name="dayTextSize" format="dimension" />
        <attr name="hourTextSize" format="dimension" />
        <attr name="minTextSize" format="dimension" />
        <attr name="secTextSize" format="dimension" />
        <attr name="dayTextColor" format="color" />
        <attr name="hourTextColor" format="color" />
        <attr name="minTextColor" format="color" />
        <attr name="secTextColor" format="color" />
        <attr name="dayTextBackground" format="reference|color" />
        <attr name="hourTextBackground" format="reference|color" />
        <attr name="minTextBackground" format="reference|color" />
        <attr name="secTextBackground" format="reference|color" />
    </declare-styleable>

</resources>