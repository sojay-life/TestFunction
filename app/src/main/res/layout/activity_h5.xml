<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ycbjie.webviewlib.wv.X5WvWebView
        android:id="@+id/web_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.ycbjie.webviewlib.widget.WebProgress
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <com.sojay.testfunction.view.PathMeasureView
        android:id="@+id/path_measure_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.sojay.testfunction.view.PaintView
        android:id="@+id/paint_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@color/gray"
            android:gravity="center"
            android:text="画笔"/>

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:gravity="center"
            android:text="标记笔"/>

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:gravity="center"
            android:text="橡皮擦"/>

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:gravity="center"
            android:text="清空"/>

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:gravity="center"
            android:text="开关"/>

        <TextView
            android:id="@+id/tv_6"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:gravity="center"
            android:text="开始动画"/>

    </LinearLayout>


</FrameLayout>